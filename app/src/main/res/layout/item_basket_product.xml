<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cartProduct"
            type="com.example.ecommerceapp.domain.model.CartProduct" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{cartProduct.name}"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="Deneme" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:priceWithCurrency="@{cartProduct.productTotalPrice}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtMinus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/gray_ec"
                android:gravity="center"
                android:paddingHorizontal="30dp"
                android:paddingVertical="20dp"
                android:text="-"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/blue_21"
                android:gravity="center"
                android:paddingHorizontal="30dp"
                android:text="@{cartProduct.quantityString}"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:text="2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPlus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/gray_ec"
                android:gravity="center"
                android:paddingHorizontal="30dp"
                android:text="+"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>
</layout>